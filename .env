# Game Development VCS Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
ENVIRONMENT=development  # development, staging, production
VERSION=1.0.0
REGISTRY=yourstudio  # Your Docker registry (Docker Hub, AWS ECR, etc.)

# =============================================================================
# VCS API SERVER CONFIGURATION  
# =============================================================================
PORT=8080
STORAGE_PATH=/app/storage
GIN_MODE=debug  # debug, release

# JWT Configuration
JWT_SECRET=change-me-in-production-use-long-random-string
JWT_EXPIRY_HOURS=24

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_URL=postgres://c1866ecf183e78cc807e6044f6513e355238187613b8cfd20d8be01fb6dc37a2:sk_nvGxWqWRbBekS02rI5Auu@db.prisma.io:5432/?sslmode=require
# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=  # Leave empty for no auth in development

# ClickHouse Configuration
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=vcs_analytics
CLICKHOUSE_USERNAME=vcs_user
CLICKHOUSE_PASSWORD=dev_password

# =============================================================================
# CLOUD & BACKUP CONFIGURATION
# =============================================================================

# AWS Configuration (for S3 backups)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
S3_BACKUP_BUCKET=your-vcs-backups

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================

# Kubernetes Namespace
NAMESPACE=vcs-system

# Resource Limits
REDIS_MEMORY_LIMIT=2Gi
CLICKHOUSE_MEMORY_LIMIT=8Gi
VCS_API_MEMORY_LIMIT=4Gi

# Storage Configuration
REDIS_STORAGE_SIZE=10Gi
CLICKHOUSE_STORAGE_SIZE=100Gi
VCS_STORAGE_SIZE=500Gi

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana
GRAFANA_PASSWORD=admin_password_change_me

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development ports (when running locally)
DEV_API_PORT=8080
DEV_REDIS_PORT=6379
DEV_CLICKHOUSE_HTTP_PORT=8123
DEV_CLICKHOUSE_NATIVE_PORT=9000
DEV_ADMINER_PORT=8081
DEV_REDIS_COMMANDER_PORT=8082

# Hot reload configuration
HOT_RELOAD=true

# =============================================================================
# SECURITY CONFIGURATION  
# =============================================================================

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=50

# File upload limits
MAX_UPLOAD_SIZE=5368709120  # 5GB for large game assets
MAX_MEMORY_BUFFER=104857600  # 100MB

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Your domain names (update these!)
PRIMARY_DOMAIN=vcs.yourstudio.com
API_DOMAIN=api.vcs.yourstudio.com

# TLS Configuration  
TLS_CERT_EMAIL=admin@yourstudio.com
TLS_CERT_ISSUER=letsencrypt-prod  # letsencrypt-staging for testing

# =============================================================================
# GAME ENGINE INTEGRATION
# =============================================================================

# UE5 Plugin Configuration
UE5_PLUGIN_ENABLED=true
UE5_AUTO_LOCK=true
UE5_DEPENDENCY_TRACKING=true

# Asset Processing
ASSET_CHUNKING_ENABLED=true
ASSET_CHUNK_SIZE=1048576  # 1MB chunks
BINARY_DIFF_ENABLED=true

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Team analytics
ANALYTICS_ENABLED=true
PRODUCTIVITY_TRACKING=true
DEPENDENCY_ANALYSIS=true

# Data retention
ANALYTICS_RETENTION_DAYS=365
LOG_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Real-time notifications
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=30

# External integrations (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection pooling
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10
DB_CONNECTION_MAX_LIFETIME=300

# Caching
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# File processing
WORKER_POOL_SIZE=10
UPLOAD_WORKER_COUNT=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, text
LOG_OUTPUT=stdout  # stdout, file

# Structured logging
LOG_REQUEST_ID=true
LOG_USER_ID=true
LOG_PERFORMANCE=true


